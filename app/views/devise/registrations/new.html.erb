<!DOCTYPE html>
<html>
  <%= render 'layouts/head_devise' %>
  <body>
    <%= render 'layouts/alerts'%>
    <div class="devise-logo">
      <div class="logo">
        <%= link_to root_path do %>
          <h1>Andemenos.com</h1>
        <% end %>
      </div>
    </div>
    <%= render 'layouts/info_devise' %>
    <div class="devise">
      <h1>Cadastrar-se</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="field">
          <div><%= f.label :email, 'Email' %></div>
          <div><%= f.email_field :email, autofocus: true, required: true %></div>
        </div>

        <div class="field">
          <div><%= f.label :password, 'Senha' %></div>
          <div><%= f.password_field :password, autocomplete: "off", required: true %></div>
        </div>

        <div class="field">
          <div><%= f.label :password_confirmation %></div>
          <div><%= f.password_field :password_confirmation, autocomplete: "off", required: true %></div>
        </div>

        <div class="actions">
          <%= f.submit "Cadastrar-se", class: 'btn btn-simple btn-full' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </body>
</html>
