<!DOCTYPE html>
<html>
  <%= render 'layouts/head_devise' %>
  <body>
    <%= render 'layouts/alerts'%>
    <%= show_messages %>
    <div class="devise-logo">
      <div class="logo">
        <%= link_to root_path do %>
          <h1>Andemenos.com</h1>
        <% end %>
      </div>
    </div>
    <%= render 'layouts/info_devise' %>
    <div class="devise">
      <div class="login-form">
        <h1>Fa√ßa seu login</h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <div><%= f.label :email, 'Email' %></div>
            <div><%= f.email_field :email, autofocus: true %></div>
          </div>

          <div class="field">
            <div><%= f.label :password, 'Senha' %></div>
            <div><%= f.password_field :password, autocomplete: "off" %></div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, 'Lembrar-me' %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Entrar", class: 'btn btn-simple btn-full' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
      <div class="login-social">
        <h1>Logar com Facebook</h1>
        <div>
          <%= link_to user_omniauth_authorize_path(:facebook), class: 'btn btn-facebook btn-full' do %>
            <i class="fa fa-facebook"></i> Logar com Facebook
          <% end %>
        </div>
        <div><%= link_to 'Cadastrar-se', new_user_registration_path, class: 'btn btn-simple btn-full' %></div>
      </div>
    </div>
  </body>
</html>
