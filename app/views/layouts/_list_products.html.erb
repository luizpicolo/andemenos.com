<% offer_verification = Offer.new %>
<% offers.each do |offer| %>
  <% if offer_verification.product_id != offer.product_id %>
  <% offer_verification = offer %>
    <section class="product">
      <%= link_to list_products_by_name_path(offer.category, offer.subcategory, offer.product.slug), title: 'Clique aqui para ver a lista de preços para este produto' do %>
        <!-- logo company -->
        <div class="text-comp">
          Clique aqui e veja os supermercados que contém este produto
        </div>

        <!-- Image product -->
        <div class="image-product">
          <%= image_tag offer.product.image.thumb %>
        </div>

        <!-- Name product -->
        <h1 class="text-center">
          <%= offer.product.name %>
        </h1>

        <!-- Price -->
        <div class="price text-center">
          <p>A partir de</p>
          <p><%= number_to_currency offer.min_price %></p>
        </div>

        <div class="social text-center">
          Em <b><%= offer.companies %></b> supermercado<%= offer.companies == 1 ? '' : 's' %>
        </div>
      <% end %>
    </section>
  <% end %>
<% end %>
